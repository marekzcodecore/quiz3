<%= @comment.errors.full_messages.join(', ') %>
<div class="col-xs-12">

  <%= form_for [@idea, @comment], remote: true do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-default" %>
  <% end %>
  <hr/>
</div>
